# Checking and setting the folder containing the datasets
getwd()
setwd("D:/Publication MDM/In progress/GP_2025/Figures and Manuscript/Code")

# Loading the required packages/libraries
library(OpenStreetMap)
library(sf)
library(scales)
library("PostcodesioR", lib.loc="~/R/win-library/4.0")

# Importing the dataset
data_UK <- read.csv("E_S_NI_W_GPcoord.csv")

# Create Figure 1B
sites <- data.frame(longitude=data_UK$longitude, latitude=data_UK$latitude)
points = st_as_sf(sites, coords = c("longitude", "latitude"), crs = 4258)
plot(st_geometry(points), col = alpha("navy", 0.4), pch=19 , cex=0.3)
